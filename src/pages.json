{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
			"^cxwii(.*)": "@/components/src/cxwii$1.vue"
		}
	},
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTextStyle": "white",
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/test/test",
			"style": {
				"navigationBarTitleText": "test"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"selectedColor": "#20e3d4",
		"color": "#333",
		"backgroundColor": "#fff",
		"borderStyle": "black",
		"list": [
			{
				"pagePath": "pages/index/index",
				"text": "首页",
				"iconPath": "static/tabs/indexIcon.png",
				"selectedIconPath": "static/tabs/indexSelectedIcon.png"
			},
			{
				"pagePath": "pages/my/my",
				"text": "我的",
				"iconPath": "static/tabs/myIcon.png",
				"selectedIconPath": "static/tabs/mySelectedIcon.png"
			}
		]
	},
	"subPackages": [
		{
			"root": "subPages",
      // 一个文件夹为单独的一个包
			"pages": [
				{
					"path": "subPageTest/subPageTest",
					"style": {
						"navigationBarTitleText": "subPageTest"
					}
				}
			]
		}
	],
  "preloadRule": {
    "pages/index/index": {
      "network": "all",
      // 设置加载包的名字
      "packages": ["subPages"]
    }
  }
}